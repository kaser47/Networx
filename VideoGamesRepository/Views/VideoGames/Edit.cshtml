@using VideoGamesRepository.Data.Models
@using VideoGamesRepository.Models.Enums
@model VideoGamesRepository.Data.Models.VideoGame

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>VideoGame</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DropDownListFor(o => o.Genre, Enum.GetValues(typeof(Genre)).Cast<Genre>
                    ().Select(x => new SelectListItem { Text = x.ToString(), Value = ((int)x).ToString() }))
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublishedYear" class="control-label"></label>
                <input asp-for="PublishedYear" class="form-control" />
                <span asp-validation-for="PublishedYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

            @if (ViewBag.ValidationMessages != null)
            {
                @foreach (string message in ViewBag.ValidationMessages)
                {
                    <div class="alert alert-danger">@message</div>
                }
            }

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
